{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.OpenTelemetry" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "Endpoint": "http://smartbin.otel-collector:4318",
          "Protocol": "HttpProtobuf",
          "ResourceAttributes": {
            "service.name": "SmartBin.Api",
            "deployment.environment": "production",
            "service.version": "1.0.0"
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithSensitiveDataMasking" ]
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:8080",
        "Protocols": "Http1"
      }
    }
  },

  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "SmartBinDatabase",
    "UsersCollection": "Users",
    "BinsCollection": "Bins"
  },
  "Jwt": {
    "Issuer": "SmartBin.Api",
    "Audience": "SmartBin.Client",
    // Секретный ключ должен быть длинным и сложным. Используйте Environment Variables в продакшене.
    
  },
  "Mqtt": {
    "Host": "localhost",
    "Port": 1883,
    "ClientId": "MySmartBinClient",
    "Topics": [ "alert/smoke", "telemetry" ]
  },
  "AllowedHosts": "*"
}
