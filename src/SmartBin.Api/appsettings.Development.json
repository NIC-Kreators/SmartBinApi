{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.OpenTelemetry"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Information",
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "Endpoint": "http://smartbin.otel-collector:4318",
          "Protocol": "HttpProtobuf",
          "ResourceAttributes": {
            "service.name": "SmartBin.Api",
            "deployment.environment": "development",
            "service.version": "1.0.0"
          }
        }
      }
    ],
    "Enrich": [
      "FromGlobalLogContext", 
      "FromLogContext", 
      "WithMachineName", 
      "WithThreadId", 
      "WithHttpRequestId", 
      "WithCorrelationId",
      "WithClientIp",
      "WithExceptionDetails", 
      "WithDemystifiedStackTraces"
    ]
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5185",
        "Protocols": "Http1"
      }
    }
  }
}
